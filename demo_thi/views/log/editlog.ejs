
<%- include('../inc/top') %>
    <div class="container" style="margin-top: 20px;">
        <div class="page-wrapper p-t-45 p-b-50">
            <div class="wrapper wrapper--w790">
                <div class="card">
                    <div class="card-heading">
                        <h2 class="title" style="color: blue; margin-top: 20px; text-align: center;">SỬA SẢN PHẨM </h2>
                    </div>
                    <div class="card-body">
                        <form action="" method="post" enctype="multipart/form-data">

                            <div class="row">
                                <div class="form-row col-6">
                                    <div class="input-group has-validation">
                                        <span style="width: 110px;" class="input-group-text" id="validationTooltipUsernamePrepend">Name</span>
                                        <input type="text" name="name"  value="<%= objLog.name %>"  class="form-control" id="validationTooltipUsername"
                                          aria-describedby="validationTooltipUsernamePrepend" required>
                                        <div class="invalid-tooltip">
                                          Please choose a unique and valid name.
                                        </div>
                                      </div>
                                </div>
                                <div class="form-row col-6">
                                    <div class="input-group has-validation">
                                        <span style="width: 110px;" class="input-group-text" id="validationTooltipUsernamePrepend">Content</span>
                                        <input type="text" name="noidung"  value="<%= objLog.noidung %>"  class="form-control" id="validationTooltipUsername"
                                          aria-describedby="validationTooltipUsernamePrepend" required>
                                        <div class="invalid-tooltip">
                                          Please choose a unique and valid content.
                                        </div>
                                      </div>
                                </div>
                            </div>
                            <div class="form-row" style="margin-top: 10px;">
                                <div class="input-group has-validation">
                                    <span style="width: 110px;" class="input-group-text" id="validationTooltipUsernamePrepend">Image</span>
                                    <input type="file" name="img" value="<%= objLog.img %>" style="margin-left: 20px; padding: 5px;"/>  
                                    <div class="invalid-tooltip">
                                      Please choose a unique and valid image.
                                    </div>
                                  </div>
                            </div>

                            <div class="form-row" style="margin-top: 20px;">
                                <span style="width: 110px;" class="input-group-text" id="validationTooltipUsernamePrepend">Role</span>
                              <select style="margin-left: 25px;"  value="<%= objLog.trangthai %>"  name="trangthai" class="form-select" id="validationCustom04" required>
                                <% listTrangThai.forEach( (objTT)=>{
                                    let selected = '';
                                    if(String( objTT._id ) == String(objLog.id_trangthai) ){
                                    selected = ' selected ';
                                    }
                                    %>
                
                                    <option <%=selected %>
                                        value="<%= objTT._id %>"> <%= objTT.name %>
                                    </option>
                
                                    <% } ) %>
                              </select>
                              <div class="invalid-feedback">
                                Please select a valid role.
                              </div>
                            </div>

                            <div class="d-flex justify-content-center">
                                <button class="btn btn--radius-2 btn--blue " type="submit">Update</button>
                            </div>
                            <%= msg %>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <%- include('../inc/bottom') %>


